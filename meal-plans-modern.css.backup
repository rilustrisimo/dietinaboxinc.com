    .meal-image {
        width: 5rem;
        height: 5rem;
    }
    
    .breakdown-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 0.5rem;
    }
    
    .modern-order-summary {
        padding: 1.25rem;
        border-radius: 0.75rem;
        margin-top: 1.5rem;
    }
    
    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }
}

/* Print styles */
@media print {
    .meal-plans-modern {
        background: white !important;
    }
    
    .meal-plan-card,
    .addon-card,
    .modern-order-summary {
        box-shadow: none !important;
        border: 1px solid #ccc !important;
    }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    .meal-plan-card {
        border-width: 3px;
    }
    
    .meal-plan-card.selected {
        border-width: 4px;
    }
}
