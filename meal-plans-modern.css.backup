    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

.meal-plan-card.selected {
    animation: selectPulse 0.3s ease-out;
}

/* Hover effects */
.qty-btn:hover {
